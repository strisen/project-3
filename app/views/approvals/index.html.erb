<div class="offset-md-1 col-md-10 mt-3">

  <h2><strong>Approval of products</strong></h2>

  <div class="row d-flex flex-row">
    <% @all_products.each do |product| %>
      <% if product.status == 1 %>
        <div class="m-3 p-3 approval-card">
          <%= image_tag product.picture, :size => "260x200", class: "mb-3" %>
          <h3><%= product.name %></h3>
          <p><%= product.description %></p>
          <div class="seller-name">
            <%= label :seller, "Seller: " %>
            <span><%= product.user.username %></span>
          </div>
          <div class="product-id">
            <%= label :id, "Product ID: " %>
            <span><%= product.id %></span>
          </div>
          <div class="action">
            <%= link_to "Change Approval Status",edit_approval_path(product), class: "btn btn-outline-primary"%>
          </div>
        </div>
      <%end%>
    <%end%>
  </div>

</div>
